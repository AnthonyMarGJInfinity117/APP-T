<?xml version="1.0" encoding="utf-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
 xmlns:gap = "http://phonegap.com/ns/1.0"
  id = "com.phonegap.apptitulacion"
   version = "1.0.0">
   
   <name> Adopción y cuidado de perros</name>
   
   <description>
   Aplicación que permitirá adoptar y recibir consejos de veterinarios para cuidar y darles un hogar a los perros. 
   </description>
   
   <author href="https://build.phonegap.com" email="cbtis16.gonzalez.juarez.marvin@gmail.com">
    Marvin González Juárez
	</author>
	
	<!-- Personaliza la aplicación y plataforma -->
	<preference name="orientation"		value="default" />
	<!-- <preference name="orientation"		value="portrait" />
	<preference name="orientation"		value="landscape" /> -->
	<preference name="target-device"		value="universal" />
	<preference name="fullscreen"		value="true" />
	<preference name="android-installLocation" value="auto" />
	<preference name="permissions" value="INTERNET" />
	
	<!-- Para acceder a páginas de Internet -->
	<allow-intent href="https://*/*"/>
	<allow origin="https://*/*"/>
	<allow-intent href="https://*/*"/>
	<allow origin="https://*/*"/>
	<plugin name="cordova-plugin-whitelist" source="npm" />
	
	<!-- Plugins -->
    <!-- Core plugins -->
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-vibration" spec="~2.1.3" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<plugin name="cordova-plugin-file" spec="~6.0.1" />
	<plugin name="cordova-plugin-file-transfer" spec="~1.7.1" />
	<plugin name="cordova-plugin-media" spec="~5.0.2" />
	<plugin name="cordova-plugin-media-capture" spec="~3.0.2" />
	
	<!-- Third party plugins -->
	
	<!-- Icono de la app -->
<icon src="res/android/mdpi.png" />

</widget>